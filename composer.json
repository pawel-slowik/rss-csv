{
    "name": "pawel-slowik-rekrutacja-h-rtec/rss-client",
    "description": "",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Słowik",
            "email": "pawel.slowik@zoho.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ezyang/htmlpurifier": "^4.11",
        "laminas/laminas-feed": "^2.13",
        "laminas/laminas-http": "^2.13",
        "league/csv": "^9.3",
        "symfony/console": "^6.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "RssClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RssClient\\Test\\": [
                "tests/"
            ]
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "tests": [
            "@cs",
            "vendor/bin/phpmd src,tests text ./phpmd.xml",
            "vendor/bin/phpstan analyse -l max src tests -c phpstan.neon --no-progress",
            "@test"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage php ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "vendor/bin/php-cs-fixer fix -v --dry-run",
            "vendor/bin/phpcs --standard=phpcs.xml src;"
        ],
        "cs-fix": [
            "vendor/bin/php-cs-fixer fix -v",
            "vendor/bin/phpcbf src tests"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
